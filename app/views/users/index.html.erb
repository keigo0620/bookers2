    <div class="container">
      <div class="row">
        <div class="col-xs-3">
          <%= render 'users/list' ,user: @user,book:@book %>
        </div>
        <div class="col-xs-9">
          <h2>Users</h2>
          <table class="table">
            <thead>
            <tr>
              <th>image</th>
              <th>name</th>
            </tr>
            </thead>
            <tbody>
              <% @users.each do |user| %>
                <tr>
                  <td>
                    <a><%= attachment_image_tag user, :profile_image, fallback: "no_image.jpg", size: "60x60" %></a>
                  </td>
                  <td>
                  <td>
                    <%= user.name %>
                  </td>
                  <td>
                    <%= link_to "Show", user_path(user.id) %>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>