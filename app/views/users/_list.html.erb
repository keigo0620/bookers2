<% if flash[:notice] %>
  <p><%= flash[:notice] %></p>
  <% end %>
<h2>User info</h2>
<%= attachment_image_tag @user, :profile_image, class: "img-circle pull-left profile-thumb", fallback: "no_image.jpg", size: "100x100" %>
<table class="table">
  <tbody>
    <tr>
        <th>name</th>
        <th><%= @user.name %></th>
    </tr>
    <tr>
        <th>introduction</th>
        <th><%= @user.introduction %></th>
    </tr>
    <tr>
      <th>follows</th>
      <th><%=link_to @user.followings.count, follows_user_path(@user.id) %></th>
    </tr>

    <tr>
      <th>followers</th>
      <th><%=link_to @user.followers.count, followers_user_path(@user.id) %></th>
    </tr>
    <tr>
    <tr>
    </tbody>
</table>

    <h2>New book</h2>
    <%= form_for (book) do |f| %>

    <div class="field row">
    <h4>Title</h4>
    <%= f.text_field :title, class: "col-xs-12 book_title"%>
  </div>

    <div class="field row">
    <h4>Opinion</h4>

    <%= f.text_area :body, class: "col-xs-12 book_body" %>
  </div>
  <div class="actions row">
   <%= f.submit 'Create Book',class: "btn btn-primary col-xs-12"%>
  </div>
   <% end %>

